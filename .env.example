# Required environment variables

# PostgreSQL connection URL
POSTGRES_URL=postgresql://chess:chess@localhost:5432/chess

# Google OAuth credentials (required for authentication)
GOOGLE_O_AUTH_CLIENT_ID=your-google-client-id
GOOGLE_O_AUTH_CLIENT_SECRET=your-google-client-secret

# Optional environment variables

# Service secret for JWT signing (auto-generated if not set)
# Generate with: openssl rand -hex 32
SERVICE_SECRET=

# Development mode (enables hot reload, allows http for OAuth)
DEV_MODE=True

# Server configuration
HOST_NAME=http://localhost:8000
LISTEN_ADDRESS=0.0.0.0
LISTEN_PORT=8000

# Auth redirect URI (defaults to {HOST_NAME}/auth/google/callback)
AUTH_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Debug mode (verbose logging)
DEBUG=True
